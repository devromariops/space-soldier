import os

list_explosion = []
file_path = os.path.join('assets', 'sprites', 'enemy-explosion')

for _ in range(1, 17):
        file_name = os.path.abspath(os.path.join('assets', 'sprites', 'enemy-explosion',f'{_}.png'))
        list_explosion.append((file_name, file_path))
        

image_path1 = os.path.abspath(os.path.join('assets', 'sprites', 'targets', 'target-circle.png'))
image_path2 = os.path.abspath(os.path.join('assets', 'sprites', 'targets', 'target-tri.png'))
targets = os.path.join('assets', 'sprites', 'targets')

font_path = os.path.abspath(os.path.join('assets', 'fonts', 'Alien-Eclipse.ttf'))
fonts = os.path.join('assets', 'fonts')

image_blackspace_background_path = os.path.abspath(os.path.join('assets', 'sprites', 'stars-nebulae', 'blackspace-background.png'))
image_stars_path = os.path.abspath(os.path.join('assets', 'sprites', 'stars-nebulae', 'stars.png'))
image_nebulai1_path = os.path.abspath(os.path.join('assets', 'sprites', 'stars-nebulae', 'nebula1.png'))
image_nebulai2_path = os.path.abspath(os.path.join('assets', 'sprites', 'stars-nebulae', 'nebula2.png'))
image_nebulai3_path = os.path.abspath(os.path.join('assets', 'sprites', 'stars-nebulae', 'nebula3.png'))
stars_nebulae = os.path.join('assets', 'sprites', 'stars-nebulae')

image_player_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-ships', 'player.png'))
image_enemy_speed_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-ships', 'enemy-speed.png'))
image_enemy_standard_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-ships', 'enemy-standard.png'))
space_ships = os.path.join('assets', 'sprites', 'space-ships')

sound_player_fire_path = os.path.abspath(os.path.join('assets', 'sounds', 'player_fire.mp3'))
sound_player_death_path = os.path.abspath(os.path.join('assets', 'sounds', 'player_death.mp3'))
sound_enemy_death_path = os.path.abspath(os.path.join('assets', 'sounds', 'enemy_death.mp3'))
sounds = os.path.join('assets', 'sounds')

image_bullet_standard_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-bullets', 'player-bullet-standard.png'))
image_enemy_fast_bullet_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-bullets', 'enemy-fast-bullet.png'))
image_enemy_standard_bullet_path = os.path.abspath(os.path.join('assets', 'sprites', 'space-bullets', 'enemy-standard-bullet.png'))
space_bullets = os.path.join('assets', 'sprites', 'space-bullets')

add_files = [(image_path1, targets),
             (image_path2, targets),
             (font_path, fonts),
             (image_blackspace_background_path, stars_nebulae),
             (image_stars_path, stars_nebulae),
             (image_nebulai1_path, stars_nebulae),
             (image_nebulai2_path, stars_nebulae),
             (image_nebulai3_path, stars_nebulae),
             (image_player_path, space_ships),
             (image_enemy_speed_path, space_ships),
             (image_enemy_standard_path, space_ships),
             (sound_player_fire_path, sounds),
             (sound_player_death_path, sounds),
             (sound_enemy_death_path, sounds),
             (image_bullet_standard_path, space_bullets),
             (image_enemy_fast_bullet_path, space_bullets),
             (image_enemy_standard_bullet_path, space_bullets)]

add_files += list_explosion